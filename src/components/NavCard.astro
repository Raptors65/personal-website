---
interface Props {
  href: string;
  hoverStyle: string;
  title: string;
  description: string;
}

const { href, hoverStyle, title, description } = Astro.props;
---

<a
  href={href}
  class:list={[
    "border border-gray-700 p-3 w-full md:w-72 transition duration-300",
    hoverStyle,
  ]}
>
  <h2 class="text-xl font-bold">{title}</h2>
  <p>{description}</p>
</a>
